{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data.db"
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },

  "GoogleSheets": {
    "CredentialsPath": "credentials/google-service-account.json"
  },

  "Vmix": {
    "DefaultHost": "192.168.1.100",
    "DefaultPort": 8099,
    "TimeoutMs": 5000
  },

  "System": {
    "DefaultPollIntervalSec": 7,
    "TimeZone": "America/New_York",
    "MaxLogEntries": 1000
  }
}
